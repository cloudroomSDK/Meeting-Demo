<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TitleBar"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/titlebar_iv_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onViewClick"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/titlebar_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onViewClick"
        android:scaleType="fitCenter"
        android:textColor="@color/title_clickable_text"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/titlebar_iv_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onViewClick"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/titlebar_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onViewClick"
        android:scaleType="fitCenter"
        android:textColor="@color/title_clickable_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/titlebar_tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/titlebar_iv_right"
        android:layout_toRightOf="@id/titlebar_iv_left"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>